<% provide(:title, 'Log in')%>

<div class="row form">
    <div class="col-md-6 col-md-offset-3">
        <h1>Login</h1>

        <%= form_for(:session, url: login_url, html: { class: 'login-form'}) do |f| %>
        
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit 'Log in', class: 'btn btn-primary login-button' %>
        <% end %>

        <p class="signup-link">Haven't account? <%= link_to  "Sign up now", signup_url  %></p>
    </div>
</div>



<script type="text/javascript">
    <%= render "validation.js" %>
</script>
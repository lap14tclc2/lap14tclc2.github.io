<header class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <div class="navbar-brand">
                <%= link_to  "Ceaser Ciphered", root_url %>
            </div>
        </div>

        <ul class="nav navbar-nav">
            <li>
                <%= link_to  "Home", root_url %>
            </li>
            <li>
                <%= link_to  "Help", help_url %>
            </li>
            <li>
                <%= link_to  "About", about_url %>
            </li>
            <li>
                <%= link_to  "Contact", contact_url %>
            </li>
        </ul>
       
        <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
                <% if current_user.admin? %>
                <li><%= link_to  "Users", users_path %></li>
                <% end %>
                
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Account
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><%= link_to  "Profile", user_url(current_user) %></li>
                        <li><%= link_to  "Setting", edit_user_url(current_user) %></li>
                        <li><%= link_to  "Log out", logout_url, method: "delete" %></li>
                    </ul>
                </li>
            <% else %>
                <li>
                    <%= link_to  "Log in", login_url %>
                </li>
            <% end %>
        </ul>
    </div>
</header>
<% provide(:title, "All users")%>
<div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h1>All Users</h1>
            <%= will_paginate %>
            <table class="table table-bordered table-hover">
                <thead>
                    <th>Email</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    <tr>
                        <td class="col-md-9">
                            <%= user.email %>
                        </td>
                          <td class="col-md-3">
                            <%= link_to  "Detail", user_url(user), class: "btn btn-info" %>
                            <% if current_user.admin? && !current_user?(user) %>
                              <%= link_to  "Edit", edit_user_url(user), class: "btn btn-primary" %>
                              <%= link_to  "Delete", user, method: :delete,
                                                    data: { confirm: "Are you sure delete #{user.email}"},
                                                    class: "btn btn-danger" %>
                            <% end %>
                          </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            <%= will_paginate %>
        </div>
    </div>
    
    